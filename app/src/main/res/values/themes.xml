<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AwesomeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/ephesis_regular</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainTitleApp">
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">@font/ephesis_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>



    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:fontFamily">@font/overlock_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:fontFamily">@font/overlock_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Title.Shadow">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextDescribe">
        <item name="android:fontFamily">@font/overlock_black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>